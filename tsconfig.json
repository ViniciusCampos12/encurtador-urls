{
  "compilerOptions": {
    "lib": [
      "ES2023"
    ],
    "module": "CommonJS",
    "target": "ES2023",
    "outDir": "./dist",
    "rootDir": "./src",
    "allowJs": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "test",
    "**/*.spec.ts",
    "jest.config.js"
  ],
}